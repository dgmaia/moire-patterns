---
title: Freaky Dot Patterns
---

<section>
    <div>
        <h1>Select pattern</h1>
        <select id="type" class="values">
            <optgroup>
                <option value="random2">Random</option>
                <option value="random1">Random 2</option>
                <option value="triangle">Triangles</option>
                <option value="square1">Squares</option>
                <option value="circle">Circles</option>
            </optgroup>
        </select>
        <h1>Enter size</h1>
        <input id="canvas-size" type="number" min="3" max="100" value="50" step="1">
        <button type="submit" id="draw">Create</button>
        <h1>Rotate</h1>
        <input id="range" type="range" min="0" max="360" value="00" step="0.5" class="values">
        <h1>Move X</h1>
        <input id="x-value" type="number" min="-800" max="800" value="0" step="1" class="values">
        <h1>Move Y</h1>
        <input id="y-value" type="number" min="-800" max="800" value="0" step="1" class="values">
        <input id="size-value" type="number" min="-10" max="10" value="1" step="0.01" class="values">
    </div>
</section>
<section>
    <canvas id="canvas"></canvas>
    <canvas id="canvas2"></canvas>
</section>